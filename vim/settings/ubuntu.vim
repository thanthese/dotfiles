" clipboard magic
" ===============

set guioptions+=aA " use system clipboard
set clipboard=unnamed " make "* the anonymous register


" navigation to files
" ===================

nmap \b :e ~/.bashrc<CR>
nmap \h :e ~/
nmap \p :e ~/Dropbox<cr>
nmap \s :e /sandbox/scratch.txt<CR>
nmap \t :e ~/Dropbox/vimwiki/todo.txt<cr>
nmap \u :e ~/Dropbox/vimwiki/usernames.txt<cr>
nmap \v :e ~/.vimrc<CR>
