# ll after every cd
#
# source: http://stackoverflow.com/questions/3964068/zsh-automatically-run-ls-after-ever-cd
function chpwd() {
  emulate -LR zsh
  ls --color=auto -lthr
}

# colors make ubuntu happy!
alias -g ls="ls --color=auto"
alias -g ll="ls --color=auto -lthr"

export GREP_OPTIONS='--color=auto'
